pcm.!default {
  type plug
  slave.pcm "dmixer-aux"
#  slave.pcm "dmixer-hdmi"
}

pcm.dmixer-aux  {
  type dmix
  ipc_key 1024
  slave {
    pcm "hw:PCH,0"
  }
}

pcm.dmixer-hdmi  {
# for output via hdmi to work spdif1 ought to be enabled in alsamixer
  type dmix
  ipc_key 1024
  slave {
    pcm "hw:PCH,3"
  }
}

ctl.!default {
  type hw
  card 0
}
