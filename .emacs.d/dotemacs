  (gui-set-selection 'PRIMARY (buffer-substring beg end)))

(defun my-put-region-into-gui-clipboard (beg end)
  (interactive "r")
  (my-activate-mark)
  (gui-set-selection 'CLIPBOARD (buffer-substring beg end)))

(defun think (pre)
  (lambda () (interactive) (princ (concat "THINK - " pre))))

