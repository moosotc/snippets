(defun my-monkeytype-repeat ()
  (interactive)
  (if (string-equal (buffer-name (current-buffer)) "*Monkeytype*")
      (kill-this-buffer))
  (monkeytype-repeat))

(defun my-monkeytype-region (beg end)
  (interactive "r")
  (monkeytype-region beg end))
(defun my-monkeytype-region-as-words (beg end)
  (interactive "r")
  (monkeytype-region-as-words beg end))

(global-set-key (kbd "H-<escape>") 'my-monkeytype-repeat)
(global-set-key (kbd "C-<escape>") 'my-monkeytype-region)
(global-set-key (kbd "M-~") 'my-monkeytype-region-as-words)

