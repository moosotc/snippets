#!/bin/sh
set -e
exec 1>/dev/null 2>&1

if ! pgrep pulseaudio; then
    amixer set Speaker toggle | grep -q '\[on' && \
        { name="ðŸŽ§+ðŸ”‰"; ctl=Speaker; } || { name="ðŸŽ§"; ctl=Headphone; }
    vol=$(amixer -- get $ctl | awk 'END{print $5}')
else
    name=speaker
    pacmd list-sinks | grep "active.*port.*headph" || name=headphones
    pacmd set-sink-port 1 analog-output-$name
    test $name = "headphones" && name="ðŸŽ§" || name="ðŸ”‰"
    vol="$(pamixer --get-volume) %" || true
fi

xdotool search --onlyvisible --class i3bar || {
    i3-msg bar hidden_state show
    (sleep 3; i3-msg bar hidden_state hide) &
}
printf "%s %s\0003" "$name" "$vol" >/tmp/i3.fifo
