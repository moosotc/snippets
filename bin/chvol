#!/bin/sh
set -e

per=$(pamixer --get-volume) || true
per=$((per"$1"5))
pamixer --set-volume $per

pgrep &>/dev/null -a -f i3mon.py && {
    printf "â™¬ $per%%\x002">/tmp/i3.fifo
    xdotool search --onlyvisible i3bar || {
        i3-msg bar hidden_state show
        sleep 3
        i3-msg bar hidden_state hide
    }
} || echo "$per%" | dzen2 -p 2 -fn 20

