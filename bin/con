#!/bin/sh
set -eu

d=$HOME/x/con
test -n "${1-}" || {
    find $d -printf "%P "
    echo
    exit
}

! test "$1" = "add" || {
    test -z "${2##/*}" && p=$2 || p=$PWD/$2
    exec ln -s "$p" "$d/${3-}"
}

file="$d/$1"
argsfile=$d/$(basename "$1").args
shift

if test $# -eq 0; then
    cat 2>/dev/null $argsfile
else
    for arg; do printf "%s%\000" $arg; done | tee $argsfile
fi | xargs -0 mpv $file
