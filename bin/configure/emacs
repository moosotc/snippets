#!/bin/sh
# git://git.savannah.gnu.org/emacs.git 0965d94ca426765382f366bf48f88ba5f9500afd

exec ./configure                                \
     --without-rsvg                             \
     --without-imagemagick                      \
     --without-toolkit-scroll-bars              \
     --without-dbus                             \
     --without-gconf                            \
     --without-gsettings                        \
     --without-selinux                          \
     --with-x-toolkit=lucid                     \
     --without-gpm                              \
     --without-selinux                          \
     --with-file-notification=no                \
     --with-tiff=no                             \
     --without-gif                              \
     --without-pop                              \
     --without-xim                              \
     --without-gnutls                           \
     --without-gpm                              \
     --disable-acl                              \
     --without-libsystemd                       \
     "$@"
