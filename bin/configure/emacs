#!/bin/sh
# git://git.savannah.gnu.org/emacs.git 4503dcf635aae4d40024267d373332bab588009f

export CC='ccache gcc'
exec ./configure                                \
     --without-rsvg                             \
     --without-imagemagick                      \
     --without-toolkit-scroll-bars              \
     --without-dbus                             \
     --without-gconf                            \
     --without-gsettings                        \
     --without-selinux                          \
     --with-x-toolkit=lucid                     \
     --without-gpm                              \
     --without-selinux                          \
     --with-file-notification=no                \
     --with-tiff=no                             \
     --without-gif                              \
     --without-pop                              \
     --without-xim                              \
     --without-gpm                              \
     --disable-acl                              \
     --without-libsystemd                       \
     --with-mailutils                           \
     "$@"
