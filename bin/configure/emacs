#!/bin/sh
# git://git.savannah.gnu.org/emacs.git 7407f89fe71c87be45f35cf3d4f8bc0550cf8384

exec ./configure                                \
     --without-rsvg                             \
     --without-imagemagick                      \
     --without-toolkit-scroll-bars              \
     --without-dbus                             \
     --without-gconf                            \
     --without-gsettings                        \
     --without-selinux                          \
     --with-x-toolkit=lucid                     \
     --without-gpm                              \
     --without-selinux                          \
     --with-file-notification=no                \
     --with-tiff=no                             \
     --without-gif                              \
     --without-pop                              \
     --without-xim                              \
     --without-gpm                              \
     --disable-acl                              \
     --without-libsystemd                       \
     --with-mailutils                           \
     "$@"
