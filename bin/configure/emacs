#!/bin/sh
# git://git.savannah.gnu.org/emacs.git e8c07cae5faca34c64568a393cdc2da59a295c86

exec ./configure                                \
     --without-rsvg                             \
     --without-imagemagick                      \
     --without-toolkit-scroll-bars              \
     --without-dbus                             \
     --without-gconf                            \
     --without-gsettings                        \
     --without-selinux                          \
     --with-x-toolkit=lucid                     \
     --without-gpm                              \
     --without-selinux                          \
     --with-file-notification=no                \
     --with-tiff=no                             \
     --without-gif                              \
     --without-pop                              \
     --without-xim                              \
     --without-gpm                              \
     --disable-acl                              \
     --without-libsystemd                       \
     --with-mailutils                           \
     --with-dumping=unexec                      \
     "$@"
