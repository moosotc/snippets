#!/bin/sh
# git://git.savannah.gnu.org/emacs.git bb3d13ac3586d3577605d3d8809d31c62a267c99

export CC='ccache gcc'
exec ./configure                                \
     --without-imagemagick                      \
     --without-toolkit-scroll-bars              \
     --without-dbus                             \
     --without-gconf                            \
     --without-gsettings                        \
     --without-selinux                          \
     --without-gpm                              \
     --without-selinux                          \
     --without-gpm                              \
     --disable-acl                              \
     --without-libsystemd                       \
     --with-mailutils                           \
     "$@"
