#!/bin/sh
# 62073cfa97d1b7f964b74130ddc92de8f9087d1f
set -e
export CC='ccache gcc'
export CXX='ccache g++'
./configure --prefix=/net                       \
            --enable-nonfree                    \
            --enable-gpl                        \
            --enable-openssl                    \
            --enable-libmodplug                 \
            --enable-libx264                    \
            --enable-libx265                    \
            --enable-vaapi                      \
            --enable-libdav1d                   \
            --cc="$CC"                          \
            --cxx="$CXX"
