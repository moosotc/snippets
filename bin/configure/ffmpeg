#!/bin/sh
# 7ab375f57488112fcdc8c286cdf74276d50887c2
set -e
export CC='ccache gcc'
export CXX='ccache g++'
./configure --prefix=/net                       \
            --enable-nonfree                    \
            --enable-gpl                        \
            --enable-openssl                    \
            --enable-libmodplug                 \
            --enable-libx264                    \
            --enable-libx265                    \
            --enable-vaapi                      \
            --cc="$CC"                          \
            --cxx="$CXX"
