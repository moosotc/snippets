#!/bin/sh
# f8f23a7af7dd5ec7a3ca0c9fc9c302847ef8a21b
set -e
export CC='ccache gcc'
export CXX='ccache g++'
./configure --prefix=/net                       \
            --enable-nonfree                    \
            --enable-gpl                        \
            --enable-openssl                    \
            --enable-libmodplug                 \
            --enable-libx264                    \
            --enable-libx265                    \
            --enable-vaapi                      \
            --enable-libdav1d                   \
            --cc="$CC"                          \
            --cxx="$CXX"
