#!/bin/sh
# a7f9b3b954ece129402ac7ef8f96e0fa1c01d8ba
set -e
export CC='ccache gcc'
export CXX='ccache g++'
./configure --prefix=/net                       \
            --enable-nonfree                    \
            --enable-gpl                        \
            --enable-openssl                    \
            --enable-libmodplug                 \
            --enable-libx264                    \
            --enable-libx265                    \
            --enable-vaapi                      \
            --enable-libdav1d                   \
            --cc="$CC"                          \
            --cxx="$CXX"
