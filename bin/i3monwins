#!/bin/sh
set -e

exec xprop -notype -root -spy \
     _NET_CURRENT_DESKTOP _NET_CLIENT_LIST _NET_DESKTOP_NAMES |
    while read atom _ rest; do
        case $atom in
            _NET_CURRENT_DESKTOP)
                dnum=$rest
                eval dname=\$$((dnum+1))
                dname=${dname%%,*}
                ;;
            _NET_CLIENT_LIST) ;;
            _NET_DESKTOP_NAMES) eval set -- $rest;;
        esac
        test -z "$*" || test -z "$dname" && continue
        count=$(xdotool search --desktop $dnum --class . 2>/dev/null | wc -l)
        case $dname in
            [1-9])
                hexu=$(printf "%x" $((0x2775+$dname)))
                /usr/bin/printf "\002\u$hexu $count" ;;
            *) printf "\002$dname $count";;
        esac
    done
