#!/bin/sh
set -eu
exec>/dev/null 1>&2
dev=i2c-8
dev=i2c-5

lsmod | grep -q i2c_dev || (
    . asroot
    modprobe i2c-dev
    ls -l /dev/$dev
    chgrp wheel /dev/$dev
    chmod g+rw /dev/$dev
    ls -l /dev/$dev
)

name2id() {
    case "$1" in
        dp*) echo 2;;
        dvi*) echo 3;;
        hdmi*) echo 1;;
        *) echo $default;;
    esac
}
default=$(name2id "hdmi")

expr >/dev/null "$(ddcci-tool /dev/$dev -r 0x60)" : ".*/$default" || {
    ddcci-tool /dev/$dev -r 0x60 -w $default
}

name=$(printf "hdmi\ndp\ndvi\n" | rofi -dmenu -p "Video Input:")
id=$(name2id $name)
test $id = $default || ddcci-tool /dev/$dev -r 0x60 -w $id
