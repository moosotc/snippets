#!/bin/sh
set -e

exit 123
mt=$(file -b -L --mime-type "$1")
case "$mt" in
    video/* | audio/*) o=mpv;;
    application/pdf) o=llpp;;
    application/msword) o=llppac;;
    font/*) o=fontview;;
    image/*) o=llppac;;
    *)
        expr "$1" : '.*\.\(webm\|mkv\|flv\)' && o=mpv || {
                echo "eh? $mt"
                exit 111
            }
        ;;
esac
exec br $o "$@"
