#!/bin/sh

# based on http://askubuntu.com/questions/71863/how-to-change-pulseaudio-sink-with-pacmd-set-default-sink-during-playback
set -e
exec 1>&2 2>/dev/null

sink=$(pacmd list-sinks | awk '/[^\*] index: / {print $2}')
printf "sink $sink\x00 3" >/tmp/i3.fifo
pacmd set-default-sink $sink
pacmd list-sink-inputs | grep index | while read line
do
    set -- $line
    pacmd move-sink-input $2 $sink
done
