#!/bin/bash
set -o pipefail
test "$1" = "--display" && export DISPLAY=$2 || exec pinentry-curses
echo OK
while read cmd rest
do
    case $cmd in
        SETDESC)
            DESC=$rest
            if [ ${DESC: -3} != '%0A' ]; then
                DESC="$DESC%0A"
            fi
            echo OK
        ;;
        CONFIRM)
            echo ASSUAN_Not_Confirmed
        ;;
        SETPROMPT)
            PROMPT=$rest
            echo OK
        ;;
        SETOK)
            OK=$rest
            echo OK
        ;;
        SETERROR)
            ERROR=$rest
            echo OK
        ;;
        GETPIN)
            RES=$(rofi -p 'PIN ' -password -dmenu </dev/null)
            echo D $RES
            echo OK
        ;;
        OPTION)
            echo OK
        ;;
        GETINFO)
            case $rest in
                pid*)
                    echo D $$
                    echo OK
                    ;;
                version)
                    echo D 1.0.0
                    echo OK
                    ;;
                flavor*)
                    echo D curses:curses
                    echo OK
                    ;;
                ttyinfo*)
                    echo "D - - -"
                    echo OK
                    ;;
            esac
        ;;
        BYE)
            echo OK
            exit
        ;;
        *)
            echo OK
        ;;
    esac
done
