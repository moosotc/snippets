#!/bin/sh
. asroot

test -z "$1" && {
    printf "wrong usage"
    exit 1
}
action="$1"

test "$action" = "on" && {
    modprobe btusb
    systemctl start bluetooth
    bluetoothctl <<eof
power on
scan on
agent on
pair E0:AE:5E:1B:EF:64
eof
    sixad --start
} || {
    sixad --stop
    bluetoothctl <<eof
power off
scan off
agent off
eof
    systemctl stop bluetooth
    modprobe -r btusb joydev hid_sony hidp bluetooth uinput cmac
}
