#!/bin/sh
set -e

false && {
    exec 1>/tmp/conk.out
    exec 2>/tmp/conk.err
} || {
    exec 1>/dev/null
    exec 2>/dev/null
}

test -z "$@" && {
    xdotool search --classname "Navigator" windowactivate && exit 0 || true
}

xdotool search --sync --classname "Navigator" windowactivate &
ulimit -s 1024
exec palemoon --app $HOME/x/rcs/git/conkeror2/application.ini "$@"
