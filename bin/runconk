#!/bin/sh
set -e

test -n "$debrk" && {
    exec 1>/tmp/conk.out
    exec 2>/tmp/conk.err
} || exec 1>/dev/null 2>&1

a() {
    xdotool set_desktop 0 search --maxdepth 2 --onlyvisible 'Conkeror'  \
            windowsize 1667 1113 windowactivate
}
a &

pgrep palemoon || {
    ulimit -s 1024
    exec palemoon --app $HOME/x/rcs/git/conkeror2/application.ini "$@"
}
