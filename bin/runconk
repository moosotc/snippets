#!/bin/sh
set -e

test -n "$debrk" && {
    exec 1>/tmp/conk.out
    exec 2>/tmp/conk.err
} || exec 1>/dev/null 2>&1

i3 workspace 1
(
    ulimit -s 1024
    palemoon --app $HOME/x/rcs/git/conkeror2/application.ini "$@"
) & disown
xdotool search --onlyvisible --classname 'Conkeror' \
        windowsize 1667 1113 windowactivate
