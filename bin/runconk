#!/bin/sh

doexec() {
    firefox-esr --app $HOME/x/rcs/git/conkeror2/application.ini "$@"
}

test -z "$@" && {
    xdotool search --name " Conkeror" windowactivate ||                    \
        exec firefox-esr --app $HOME/x/rcs/git/conkeror2/application.ini &
} || {
    firefox-esr --app $HOME/x/rcs/git/conkeror2/application.ini "$@" &
    exec xdotool search --sync --name " Conkeror" windowactivate
}
