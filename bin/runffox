#!/bin/sh
set -e

false && {
    exec 1>/tmp/ffox.out
    exec 2>/tmp/ffox.err
} || {
    exec 1>&2 2>/dev/null
}

a() {
    xdotool set_desktop 0 search --sync --onlyvisible --maxdepth 2      \
            --name firefox windowsize 1667 1113 windowactivate
}
a &
pgrep firefox || {
    ulimit -s 1024
    exec firefox "$@" $ps
}
