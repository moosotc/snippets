#!/bin/sh
set -e
exec 1>/dev/null 2>&1
i3 workspace 1
if ! xdotool search --name "Mozilla" &>/dev/null ; then
    (
        ulimit -s 1024
        exec firefox -P default "$@"
    ) &
fi
test -z "${1-}" || firefox -P default "$@"
s="windowsize 2000 1500"
xdotool search --sync --onlyvisible --name 'Firefox' $s windowactivate
