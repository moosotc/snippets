#!/bin/sh
set -e

exec 1>/dev/null 2>&1
i3 workspace 1
if ! xdotool search --name "Mozilla" &>/dev/null ; then
    (
        ulimit -s 1024
        firefox "$@"
    ) &
fi
test -z "${1-}" || firefox "$@"
xdotool search --sync --onlyvisible --name 'Firefox'   \
        windowsize 1667 1113 windowactivate
