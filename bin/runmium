#!/bin/sh
set -e

false && {
    exec 1>/tmp/chro.out
    exec 2>/tmp/chro.err
} || {
    exec 1>&2 2>/dev/null
}

#xdotool search selectwindow windowsize 1667 1113

test -z "$@" && {
    xdotool windowactivate $(xdotool search --class 'chromium' | tail -1) &&
        exit 0 || true
}

xdotool windowactivate $(xdotool search --sync --class 'chromium' | tail -1) &
ulimit -s 1024
exec chromium "$@"
