#!/bin/sh
set -e
exec 1>/dev/null 2>&1
i3 workspace 1
if ! xdotool search --name "Waterfox" &>/dev/null ; then
    (
        ulimit -s 1024
        exec waterfox "$@"
    ) &
fi
test -z "${1-}" || waterfox "$@"
s="windowsize 1667 1113"
s="windowsize 2000 1500"
xdotool search --sync --onlyvisible --name 'Waterfox' $s windowactivate
