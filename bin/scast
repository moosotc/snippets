#!/bin/sh
set -e
test -z "$1" && {
    echo need
    exit 1
}
test -n "$screenkey" && {
    pgrep screenkey || {
        screenkey -p bottom -s small --multiline
        trap 'pkill screenkey' 0
    }
}
args="$@"
set -- $(xwininfo -root)
w=$26
h=$28

test "x$scasthq" = "x1" && scasthq="-vcodec libx265"
ffmpeg -v error -f x11grab -video_size ${w}x${h} -i $DISPLAY $scasthq $args
