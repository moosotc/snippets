#!/bin/sh
set -e
test -z "$1" && {
    echo need
    exit 1
}
test -n "$screenkey" && {
    pgrep screenkey || {
        screenkey -p bottom -s small #--multiline
        trap 'pkill screenkey' EXIT
    }
}
args="$@"
set -- $(xwininfo -root | grep geom)
geom=$2

test "x$scasthq" = "x1" && scasthq="-vcodec libx265"
ffmpeg -v error -f x11grab -video_size $2 -i $DISPLAY $scasthq $args
