#!/bin/sh
set -e
test -z "$1" && {
    echo need
    exit 1
}
test -n "$screenkey" && {
    pgrep screenkey || {
        screenkey -p bottom -s small --multiline
        trap 'pkill screenkey' 0
    }
}
test $scasthq = 1 && scasthq="-vcodec libx265"
ffmpeg -v error -f x11grab -video_size 2560x1440 -i :0 $scasthq $@

