#!/bin/sh

setxkbmap -option "" -layout us,ru                              \
          -option grp:win_space_toggle,caps:ctrl_modifier       \
          -v dvorak,

xmodmap - <<EOF
keycode 51  = BackSpace BackSpace
keycode 22  = backslash bar
keycode 113 = Left Left Prior
keycode 114 = Right Right Next
keycode 118 = Prior Insert Insert
keycode 119 = Next Delete Delete
keycode 108 = Mode_switch Mode_switch Mode_switch Mode_switch
EOF
