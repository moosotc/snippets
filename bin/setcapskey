#!/bin/sh
setxkbmap                                       \
    -option ""                                  \
    -layout us,ru                               \
    -option grp:win_space_toggle                     \
    -option caps:backspace                      \
    -option grp_led
xmodmap - <<EOF
clear Lock
EOF
setmenusuper
