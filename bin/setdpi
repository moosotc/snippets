#!/bin/sh
set -e
#exit

N=HDMI2
N=DP-1
if false; then
    set -- $(xrandr | grep $N)
    pw=${4%x*}
    h=${4#*x}
    ph=${h%%+*}
    mw=${13%mm}
    mh=${15%mm}
else
    pw=2560
    ph=1440
    mw=553
    mh=311
fi

doset() {
    read x
    read y
    xrandr --dpi ${x}x${y}
    echo "Xft.dpi: 152" | xrdb -merge
}

bc -- <<EOF | doset
    $pw / ($mw / 25.4)
    $ph / ($mh / 25.4)
EOF
