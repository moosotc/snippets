#!/bin/sh
pgrep rxvtd || rxvtd -q -o -f

n=${1-random}
case "$n" in
    random)
        t=$(date +%s)
        case $((t%2)) in
            0) f="xft:monofur-12";;
            1) f="xft:iosevka malc-10";;
            *) f="xft:pt mono-10";;
        esac;;
    fur) f="xft:monofur-12";;
    pt)  f="xft:pt mono-10";;
    *) f="xft:iosevka malc-10";;
esac
exec rxvtc -fn "$f" -rv +sb -g 80x24+329+87
