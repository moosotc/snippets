#!/bin/sh
exec 1>&2 1>/dev/null
pgrep rxvtd || rxvtd -q -o -f

n=${1-random}
case "$n" in
    random)
        t=$(date +%s)
        case $((t%1)) in
            *) f="xft:iosevka malc-10";;
            # *) f="xft:mono-10";;
        esac;;
    fur) f="xft:monofur-12";;
    ios) f="xft:iosevka malc-10";;
    lst) f="xft:lucida sans typewriter-10";;
    *)   f="xft:$1"
esac
exec rxvtc -fn "$f" -rv +sb -g 80x24+329+87
