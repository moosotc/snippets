#!/bin/sh

# http://pastebin.com/kQKU8W0f

eval $(xdotool getdisplaygeometry --shell)
dispw="$WIDTH"
disph="$HEIGHT"

eval $(xdotool getactivewindow getwindowgeometry --shell)
winw="$WIDTH"
winh="$HEIGHT"

dispw=$((dispw-x))
disph=$((disph-y))

i3barh=26                       # i3bar height
i3dech=26                       # i3wm title height
tinth=36                        # tint2 panel height
x=0
y=$((i3barh+i3dech))

case "$1" in
    "7") ;;
    "8") x=$((dispw/2-winw/2));;
    "9") x=$((dispw-winw));;

    "4")                        y=$((disph/2-winh/2));;
    "5") x=$((dispw/2-winw/2)); y=$((disph/2-winh/2));;
    "6") x=$((dispw-winw));     y=$((disph/2-winh/2));;

    "1")                        y=$((disph-winh-tinth));;
    "2") x=$((dispw/2-winw/2)); y=$((disph-winh-tinth));;
    "3") x=$((dispw-winw));     y=$((disph-winh-tinth));;
esac
xdotool windowmove $WINDOW $x $y
