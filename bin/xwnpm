#!/bin/sh

# http://pastebin.com/kQKU8W0f

eval $(xdotool getdisplaygeometry --shell)
dispw="$WIDTH"
disph="$HEIGHT"

wid=$(xdotool getactivewindow)
eval $(xdotool getwindowgeometry --shell $wid)
winw="$WIDTH"
winh="$HEIGHT"

eval $(xdotool search --class i3bar getwindowgeometry --shell)
i3barh=$HEIGHT                  # i3bar height

eval $(xdotool search --onlyvisible --class tint2 getwindowgeometry --shell)
tint2y=$Y
tint2h=$HEIGHT

bw=$(xwininfo -id $wid | grep "Relative upper-left X:" | cut -d: -f2)
i3titleheight=26

ty=$((i3barh+bw+i3titleheight-bw))

cx=$(((dispw-winw)/2))
cy=$(((disph-tint2h-winh-i3titleheight-bw)/2))

by=$((tint2y-winh-bw))

case "$1" in
    "7") x=$bw;                y=$ty;;
    "8") x=$cx;                y=$ty;;
    "9") x=$((dispw-winw-bw)); y=$ty;;

    "4") x=$bw;                y=$cy;;
    "5") x=$cx;                y=$cy;;
    "6") x=$((dispw-winw-bw)); y=$cy;;

    "1") x=$bw;                y=$by;;
    "2") x=$cx;                y=$by;;
    "3") x=$((dispw-winw-bw)); y=$by;;
      *) x=-10;                y=-10;;
esac

xdotool windowmove $wid $x $y
