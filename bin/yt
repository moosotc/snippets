#!/bin/sh
set -e
ctl=/tmp/i3.fifo

test "$1" = "-v" && {
    shift
    set -x
} || {
    exec 1>/dev/null
    exec 2>/dev/null
}

test "$1" = "-b" && {
    shift
    exec mpv "$@"
}
yt="youtube-dl --proxy socks5://localhost:9050"
yt="youtube-dl"

test -z "$1" && arg=$(xclip -o -sel c) || { arg="$1"; shift; }
test -n "$arg" && expr "$arg" : ".*chessgames" && exec Anal
test -z "$arg" && {
    echo "nothing to show"
    exit 1
}

expr "$arg" : ".*\.\(pdf\|html\|jpg\?\)$" && {
    expr "$arg" : ".*cnn\.com.*" || {
        exec llppac "$arg"
    } && true
}

expr "$arg" : ".*\(reddit\|gfycat\).*" && fmt= \
        || fmt="--ytdl-format=[height<=720]"

title="$arg"
printf "ðŸ…¥ $title" >$ctl
(printf "%s" "ðŸ†… $($yt -e $arg)"; sleep 8; printf "\001") >$ctl &

tmux new-window -n "$title" mpv $fmt "$arg"
